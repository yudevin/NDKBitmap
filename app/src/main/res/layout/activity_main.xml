<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="customer.com.cameraapplication.MainActivity">
    <ImageView
        android:id="@+id/img"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp" />
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="还原" />
        <Button
            android:id="@+id/java_btn"
            android:layout_toRightOf="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Java bitmap" />

        <Button
            android:id="@+id/ndk_hahajing_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/java_btn"
            android:text="haha bitmap" />


        <Button
            android:id="@+id/ndk_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="ndk bitmap" />
    </RelativeLayout>


</FrameLayout>



